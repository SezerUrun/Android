<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UyeSayfasi"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon"
        android:id="@+id/ImageView_ProfilResmi"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_KullanıcıAdi"
        android:text="Kullanıcı Adı : "
        android:textColor="@color/beyaz"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditText_Mesaj"
        android:hint="Mesajınızı Buraya Yazabilirsiniz"
        android:textColorHint="#888"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/beyaz"
        android:background="@color/gri"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button_MesajGonder"
        android:background="@color/siyah"
        android:textColor="@color/mavi"
        android:text="Gönder"
        android:padding="10dp"
        android:layout_margin="10dp"/>

</LinearLayout>