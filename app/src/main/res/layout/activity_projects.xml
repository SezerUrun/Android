<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Projects"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_YayınladigimProjeler"
            android:text="Yayınladıgim Projeler"
            android:textColor="@color/beyaz"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="0"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ListView_YayinladigimProjeler"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextView_CalistigimProjeler"
            android:text="Çalıştığım Projeler"
            android:textColor="@color/beyaz"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="0"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ListView_CalistigimProjeler"
            android:layout_weight="1"/>
    </LinearLayout>
</ScrollView>
